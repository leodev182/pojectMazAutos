{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
